<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_form_remove_description_and_tax_hide_comments" model="ir.ui.view">
            <field name="name">sale.order.form.hide.comments</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="bahmni_stock_batch_sale_price.sale_form_remove_description_and_tax"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='comments']" position="attributes">
				    <attribute name="invisible">1</attribute>
			    </xpath>
            </field>
        </record>
        
        <record id="view_order_form_qty_dispensed" model="ir.ui.view">
            <field name="name">sale.order.form.qty.dispensed</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes" >
                    <attribute name="string">Name of Medication</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="attributes" >
                    <attribute name="string">Quantity Dispensed</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before" >
                    <field name="quantity_total"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="after" >
                    <field name="category_id"/>
                </xpath>
            </field>
        </record>
        
        
        <record id="sale_order_form_datetime_order_dateoflifting" model="ir.ui.view">
            <field name="name">sale.order.form.dateoflifting</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="bahmni_sale_discount.sale_order_form_datetime_order"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='datetime_order']" position="attributes">
				    <attribute name="string">Date Time of Lifting</attribute>
			    </xpath>
            </field>
        </record>
        
    </data>
</openerp>

