<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--Product Category Inherit-->
        <record id="product_category_form_view_arv" model="ir.ui.view">
            <field name="name">product.category.form.arv</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='type']" position="after">
				    <field name="is_arv"/>
			    </xpath>
            </field>
        </record>
        
        <!--Location Name In Sale Order Line-->
        <record id="view_order_form_locationname" model="ir.ui.view">
            <field name="name">sale.order.form.locationname</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='partner_id']" position="after">
				    <field name="location_name" invisible="1"/>
			    </xpath>
            </field>
        </record>

    </data>
</openerp>
