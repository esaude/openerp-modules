<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--Hide Shop field from Sale and Quotation form view-->
        <record id="product_category_form_view_arv" model="ir.ui.view">
            <field name="name">product.category.form.arv</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='type']" position="after">
				    <field name="is_arv"/>
			    </xpath>
            </field>
        </record>

    </data>
</openerp>
