<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_oe_bahmni_configuration" model="ir.ui.view">
            <field name="name">Bahmni Configuration</field>
            <field name="model">oe.bahmni.config</field>
            <field name="arch" type="xml">
                <form string="Bahmni Configuration" version="7.0" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="Bahmni Configuration"/>
                    <group>
                        <field name="host" class="oe_inline"/>
                        <field name="database" class="oe_inline"/>
                        <field name="username" class="oe_inline"/>
                        <field name="password" class="oe_inline"/>
                        <field name="port" class="oe_inline"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_oe_bahmni_configuration" model="ir.actions.act_window">
            <field name="name">Bahmni Configuration</field>
            <field name="res_model">oe.bahmni.config</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
        <menuitem id="menu_oe_bahmni_configuration" parent="base.menu_config"
            sequence="120" action="action_oe_bahmni_configuration"/>

    </data>
</openerp>
