<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partner_form_nid" model="ir.ui.view">
            <field name="name">res.partner.form.nid</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[3]/group/group[3]/field[@name='ref']" position="replace">
                </xpath>
                <xpath expr="//sheet/group/group/field[@name='function']" position="before">
                    <field name="ref" string="NID" required="True"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

